<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mei.ricardo.pessoa.app.ui.Sensor.ActivityListSensors">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deviceHeader">

        <Switch
            android:id="@+id/switchMonitoringDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monitoring_device"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewDevice"
            android:src="@drawable/ic_device"
            android:layout_below="@+id/switchMonitoringDevice"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewNameDevice"
            android:layout_toEndOf="@+id/imageViewDevice"
            android:layout_alignBottom="@+id/imageViewDevice"
            android:layout_toRightOf="@+id/imageViewDevice"
            android:layout_alignRight="@+id/switchMonitoringDevice"
            android:layout_alignEnd="@+id/switchMonitoringDevice"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="10dip" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listViewSensors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deviceHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>
