<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mei.ricardo.pessoa.app" >

    <application
        android:name="mei.ricardo.pessoa.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mei.ricardo.pessoa.app.ui.user.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="mei.ricardo.pessoa.app.ui.Navigation.MainActivity" >
        </activity>
        <activity
            android:name="mei.ricardo.pessoa.app.ui.Fragments.FragmentMyDashboard"
            android:label="@string/title_activity_fragment_my_dashboard" >
        </activity>
        <activity
            android:name="mei.ricardo.pessoa.app.ui.Fragments.FragmentMyDevices"
            android:label="@string/title_activity_fragment_my_devices" >
        </activity>
        <activity
            android:name="mei.ricardo.pessoa.app.ui.Fragments.FragmentMyProfile"
            android:label="@string/title_activity_fragment_my_profile" >
        </activity>
        <activity
            android:name="mei.ricardo.pessoa.app.ui.user.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="mei.ricardo.pessoa.app.ui.Device.AddDevice"
            android:label="@string/title_activity_add_device" >
        </activity>
        <activity
            android:name=".ui.Sensor.ActivitySensorsConfig"
            android:label="@string/title_activity_config_sensor" >
        </activity>
        <activity
            android:name=".ui.Sensor.ActivitySensors"
            android:label="@string/title_activity_sensors" >
        </activity>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
